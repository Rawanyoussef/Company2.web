@model IEnumerable<Company.Data.Models.Employee>

@{
    ViewData["Title"] = "Employees";
}

<h2>Employees</h2>

<p>
    <a href="@Url.Action("Create", "Employee")" class="btn btn-primary">Add Employee</a>
</p>

@if (Model == null || !Model.Any())
{
    <p>No employees found.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Age</th>
                <th>Salary</th>
                <th>Address</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Hiring Date</th>
                <th>Department</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Name</td>
                    <td>@employee.Age</td>
                    <td>@employee.Salary</td>
                    <td>@employee.Address</td>
                    <td>@employee.Email</td>
                    <td>@employee.Phone</td>
                    <td>@employee.HiringDate.ToShortDateString()</td>
                    <td>@employee.Department?.Name</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = employee.Id })" class="btn btn-primary">Edit</a>
                        <a href="@Url.Action("Delete", new { id = employee.Id })" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
