@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "Role List";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<h1>Role List</h1>
<a href="@Url.Action("Create")" class="btn btn-success">Create Role</a>


<table class="table">
    <thead>
        <tr>
            <th>Role Name</th>
            <th>Role ID</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var role in Model)
            {
                <tr>
                    <td>@role.Name</td>
                    <td>@role.Id</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = role.Id })" class="btn btn-primary">Edit</a>
                        <a href="@Url.Action("Delete", new { id = role.Id })" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3">No roles found</td>
            </tr>
        }
    </tbody>
</table>
 